generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  nickname  String?
  phone     String?
  landmark  String?
  notes     String?
  balance   Decimal  @default(0) @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices       Invoice[]
  ledgerEntries  LedgerEntry[]
  reminders      Reminder[]

  @@index([name])
  @@index([phone])
  @@map("customers")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  unit        String   @default("piece")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  invoiceItems InvoiceItem[]

  @@index([name])
  @@map("products")
}

model Invoice {
  id         String        @id @default(cuid())
  customerId String
  total      Decimal       @db.Decimal(12, 2)
  status     InvoiceStatus @default(CONFIRMED)
  notes      String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  customer Customer      @relation(fields: [customerId], references: [id])
  items    InvoiceItem[]

  @@index([customerId])
  @@index([createdAt])
  @@map("invoices")
}

model InvoiceItem {
  id        String   @id @default(cuid())
  invoiceId String
  productId String
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  total     Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([invoiceId])
  @@index([productId])
  @@map("invoice_items")
}

model LedgerEntry {
  id          String      @id @default(cuid())
  customerId  String
  type        LedgerType
  amount      Decimal     @db.Decimal(12, 2)
  description String
  paymentMode String?
  reference   String?
  createdAt   DateTime    @default(now())

  customer Customer @relation(fields: [customerId], references: [id])

  @@index([customerId])
  @@index([createdAt])
  @@map("ledger_entries")
}

model Reminder {
  id         String         @id @default(cuid())
  customerId String
  amount     Decimal        @db.Decimal(12, 2)
  message    String
  sendAt     DateTime
  status     ReminderStatus @default(SCHEDULED)
  retryCount Int            @default(0)
  sentAt     DateTime?
  failedAt   DateTime?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])

  @@index([customerId])
  @@index([sendAt])
  @@index([status])
  @@map("reminders")
}

model WhatsAppMessage {
  id          String              @id @default(cuid())
  reminderId  String?
  phone       String
  message     String
  messageId   String?
  status      WhatsAppStatus      @default(PENDING)
  deliveredAt DateTime?
  readAt      DateTime?
  failedAt    DateTime?
  errorCode   String?
  errorMessage String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([phone])
  @@index([reminderId])
  @@index([status])
  @@map("whatsapp_messages")
}

model ConversationSession {
  id        String   @id @default(cuid())
  startedAt DateTime @default(now())
  endedAt   DateTime?
  duration  Int?
  metadata  Json?

  recordings ConversationRecording[]

  @@index([startedAt])
  @@map("conversation_sessions")
}

model ConversationRecording {
  id        String   @id @default(cuid())
  sessionId String
  filePath  String
  fileName  String
  duration  Int?
  size      Int?
  mimeType  String   @default("audio/webm")
  createdAt DateTime @default(now())

  session ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
  @@map("conversation_recordings")
}

enum InvoiceStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

enum LedgerType {
  DEBIT
  CREDIT
  OPENING_BALANCE
}

enum ReminderStatus {
  SCHEDULED
  SENT
  FAILED
  CANCELLED
}

enum WhatsAppStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}
